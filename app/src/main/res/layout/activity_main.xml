<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:orientation="vertical">
       <ImageView
           android:id="@+id/img1"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/sizzler"
           android:layout_gravity="center"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#C117DE"
           android:orientation="horizontal">
           <CheckBox
               android:id="@+id/checkbox1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"/>
           <TextView
               android:id="@+id/sizzler"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sizzler"
               android:textColor="@color/white"
               android:textSize="25dp"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/p1"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="price=600"
               android:textSize="25dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="70dp"/>
       </LinearLayout>
       <ImageView
           android:id="@+id/img2"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/sevpuri"
           android:layout_gravity="center"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#C117DE"
           android:orientation="horizontal">
           <CheckBox
               android:id="@+id/checkbox2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"/>
           <TextView
               android:id="@+id/sevpuri"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="sev puri"
               android:textColor="@color/white"
               android:textSize="25dp"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/p2"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="price=100"
               android:textSize="25dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_marginLeft="70dp"/>
       </LinearLayout>
       <ImageView
           android:id="@+id/img3"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/sandwich"
           android:layout_gravity="center"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#C117DE"
           android:orientation="horizontal">
           <CheckBox
               android:id="@+id/checkbox3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"/>
           <TextView
               android:id="@+id/sandwich"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sandwich"
               android:textColor="@color/white"
               android:textSize="25dp"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/p3"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="price=120"
               android:textSize="25dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_marginLeft="70dp"/>
       </LinearLayout>
       <ImageView
           android:id="@+id/img4"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/pav_bhaji"
           android:layout_gravity="center"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#C117DE"
           android:orientation="horizontal">
           <CheckBox
               android:id="@+id/checkbox4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"/>
           <TextView
               android:id="@+id/pavbhaji"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="PavBhaji"
               android:textColor="@color/white"
               android:textSize="25dp"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/p4"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="price=200"
               android:textSize="25dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_marginLeft="70dp"/>
       </LinearLayout>
       <ImageView
       android:id="@+id/img5"
       android:layout_width="match_parent"
       android:layout_height="200dp"
           android:src="@drawable/garlic_bread"
       android:layout_gravity="center"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#C117DE"
           android:orientation="horizontal">
           <CheckBox
               android:id="@+id/checkbox5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"/>
           <TextView
               android:id="@+id/garlic"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Garlic_Bread"
               android:textColor="@color/white"
               android:textSize="20dp"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/p5"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="price=200"
               android:textSize="15dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_marginLeft="70dp"/>
       </LinearLayout>
       <ImageView
       android:id="@+id/img6"
       android:layout_width="match_parent"
       android:layout_height="200dp"
           android:src="@drawable/chainez_bhel"
       android:layout_gravity="center"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#C117DE"
           android:orientation="horizontal">
           <CheckBox
               android:id="@+id/checkbox6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"/>
           <TextView
               android:id="@+id/bhle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Chainez Bhel"
               android:textColor="@color/white"
               android:textSize="20dp"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/p6"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="price=210"
               android:textSize="15dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_marginLeft="70dp"/>
       </LinearLayout>
       <ImageView
           android:id="@+id/img7"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/bueger"
           android:layout_gravity="center"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#C117DE"
           android:orientation="horizontal">
           <CheckBox
               android:id="@+id/checkbox7"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"/>
           <TextView
               android:id="@+id/burger"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Burger"
               android:textColor="@color/white"
               android:textSize="25dp"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/p7"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="price=110"
               android:textSize="25dp"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:layout_marginLeft="70dp"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="100dp"></LinearLayout>
   </LinearLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#35053D">
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total="
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="place order"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@drawable/button"/>

    </LinearLayout>
</RelativeLayout>